<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/menu_left_margin"
    android:layout_marginRight="@dimen/menu_right_margin"
    android:background="@drawable/dialog_full_holo_light"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="58dip"
        android:background="@drawable/dialog_top_holo_light"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/chooser_wallpaper"
            android:textColor="@android:color/white"
            android:textSize="18dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/wallpaper_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="#efefef"
        android:dividerHeight="0.5dp" >
    </ListView>
